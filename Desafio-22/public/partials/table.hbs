{{#if partialItem.length}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{#each partialItem}}
        <tr>
            <td>{{this.name}}</td>
            <td>${{this.price}}</td>
            <td class="align-middle">
                <img loading="lazy" class="img-fluid" width="200" height="400" src={{this.url}} alt={{this.name}}/>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{/if}}